@model IEnumerable<WebApplication1.Models.Schedule>


@using Microsoft.AspNetCore.Identity


@{
    ViewData["Title"] = "Index";

}


<h2>Schedule</h2>


<!-- need to fix this so that only Admin can see it/ also move this functionality to "register as a new coach" or something similar-->
